<Window x:Class="RemoteConreolDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteConreolDesktop"
        mc:Ignorable="d"
        Title="created by Kovtun Oleksii" Height="300" Width="450" ResizeMode="NoResize" Background="#FFACE6FD">
    <Grid>
        <TextBlock Text="Створення кімнати" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24"/>

        <StackPanel Margin="20,80,20,0">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Приховати" Width="100" Height="30" Margin="5" Command="{Binding HideWindowCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
